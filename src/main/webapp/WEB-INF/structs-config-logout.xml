<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="logout" type="com.task_finalVersion.struts.form.LogoutForm">

        </form-bean>
    </form-beans>

    <action-mappings>
        <action path="/logout"
                type="com.task_finalVersion.struts.action.logoutAction"
                name="logoutForm"
                scope="request">
            <forward name="logout" path="/index.jsp"/>


        </action>

    </action-mappings>

</struts-config>